<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ewallet.gui.controllers.LoginController"
      alignment="CENTER" 
      prefWidth="500" 
      prefHeight="450"
      style="-fx-background-color: #003399;"> <VBox spacing="15" 
          alignment="CENTER" 
          maxWidth="350" 
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
        
        <Label text="E-Wallet" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #003399;" />

        <Label text="Connexion" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;" />

        <VBox style="-fx-border-color: #bdc3c7; -fx-border-width: 0 0 1 0;" prefHeight="5" />

        <TextField fx:id="emailField" 
                   promptText="Email" 
                   maxWidth="250"
                   style="-fx-font-size: 12; -fx-padding: 8; -fx-background-radius: 5;"
                   prefHeight="35" />

        <PasswordField fx:id="passwordField" 
                       promptText="Mot de passe" 
                       maxWidth="250"
                       style="-fx-font-size: 12; -fx-padding: 8; -fx-background-radius: 5;"
                       prefHeight="35" />

        <Button fx:id="loginButton"
                text="Se connecter" 
                onAction="#handleLogin"
                maxWidth="250"
                style="-fx-font-size: 14; -fx-padding: 10; -fx-background-color: #003399; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"
                prefWidth="250"
                prefHeight="40" />
                
        <Label text="Version 1.0" style="-fx-font-size: 10; -fx-text-fill: #95a5a6;" />
    </VBox>

</VBox>