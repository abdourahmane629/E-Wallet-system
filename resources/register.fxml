<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ewallet.gui.controllers.RegisterController"
            style="-fx-fit-to-width: true;">
    <VBox spacing="15" 
          alignment="TOP_CENTER" 
          prefWidth="550" 
          style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

        <!-- Header -->
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-border-color: #34495e; -fx-border-width: 0 0 2 0; -fx-padding: 0 0 15 0;">
            <Label text="E-Wallet - Inscription Client" 
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </HBox>

        <!-- Formulaire -->
        <VBox spacing="12" style="-fx-padding: 20; -fx-background-color: white; -fx-border-radius: 5;">
            
            <!-- Nom -->
            <Label text="Nom *" style="-fx-font-size: 11; -fx-font-weight: bold;" />
            <TextField fx:id="nomField" 
                       promptText="Votre nom" 
                       style="-fx-font-size: 12; -fx-padding: 10;"
                       prefHeight="35" />

            <!-- Prénom -->
            <Label text="Prénom *" style="-fx-font-size: 11; -fx-font-weight: bold;" />
            <TextField fx:id="prenomField" 
                       promptText="Votre prénom" 
                       style="-fx-font-size: 12; -fx-padding: 10;"
                       prefHeight="35" />

            <!-- Email -->
            <Label text="Email *" style="-fx-font-size: 11; -fx-font-weight: bold;" />
            <TextField fx:id="emailField" 
                       promptText="Votre email" 
                       style="-fx-font-size: 12; -fx-padding: 10;"
                       prefHeight="35" />

            <!-- Téléphone -->
            <Label text="Téléphone (optionnel)" style="-fx-font-size: 11; -fx-font-weight: bold;" />
            <TextField fx:id="telephoneField" 
                       promptText="Ex: 625676554 ou 625 67 65 54" 
                       style="-fx-font-size: 12; -fx-padding: 10;"
                       prefHeight="35" />

            <!-- Adresse -->
            <Label text="Adresse (optionnel)" style="-fx-font-size: 11; -fx-font-weight: bold;" />
            <TextField fx:id="adresseField" 
                       promptText="Votre adresse" 
                       style="-fx-font-size: 12; -fx-padding: 10;"
                       prefHeight="35" />

            <!-- Mot de passe -->
            <Label text="Mot de passe *" style="-fx-font-size: 11; -fx-font-weight: bold;" />
            <PasswordField fx:id="passwordField" 
                           promptText="Minimum 6 caractères" 
                           style="-fx-font-size: 12; -fx-padding: 10;"
                           prefHeight="35" />

            <!-- Confirmer mot de passe -->
            <Label text="Confirmer le mot de passe *" style="-fx-font-size: 11; -fx-font-weight: bold;" />
            <PasswordField fx:id="confirmPasswordField" 
                           promptText="Répétez votre mot de passe" 
                           style="-fx-font-size: 12; -fx-padding: 10;"
                           prefHeight="35" />

            <!-- Note -->
            <Label text="* Champs obligatoires" style="-fx-font-size: 9; -fx-text-fill: #e74c3c;" />

            <!-- Boutons -->
            <HBox spacing="10" alignment="CENTER" prefHeight="50" style="-fx-padding: 20 0 0 0;">
                <Button fx:id="registerButton"
                        text="S'inscrire" 
                        onAction="#handleRegister"
                        style="-fx-font-size: 12; -fx-padding: 10 30 10 30; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;"
                        prefHeight="40" />
                
                <Button fx:id="backButton"
                        text="Retour" 
                        onAction="#handleBack"
                        style="-fx-font-size: 12; -fx-padding: 10 30 10 30; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"
                        prefHeight="40" />
            </HBox>
        </VBox>

        <Label text="Déjà inscrit ? Retournez à l'accueil et connectez-vous" 
               style="-fx-font-size: 10; -fx-text-fill: #95a5a6;" />

    </VBox>
</ScrollPane>